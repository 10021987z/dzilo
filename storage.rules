rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload and manage their own profile images
    match /profile-images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can upload and manage their own documents
    match /user-documents/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Company-wide assets (read-only for authenticated users)
    match /company-assets/{allPaths=**} {
      allow read: if request.auth != null;
    }
  }
}